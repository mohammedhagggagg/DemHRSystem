<div asp-validation-summary="All" class="error"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Enter Your Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me </span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register" asp-controller="Account"> SIGIN UP Now!</a></p>
        <br />
		<div class="text-center">
			<form asp-action="ExternalLogin" asp-controller="Account" method="post" class="d-inline-block">
				 <button type="submit" name="provider" value="Google" class="google-btn"> 
				 	<i class="fa fa-google"></i> Sign in with Google 
				 </button> 
			</form>
		</div>
		<br />
		<p> <a asp-action="ForgetPassword" asp-controller="Account"> Forget Password</a></p>
	</div>
</div>
