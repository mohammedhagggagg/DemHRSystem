@model EmployeeViewModel
@{
	ViewData["Title"] = "Edit";
}

<h1> Edit @Model.Name Employee</h1>
<div asp-validation-summary="All" class="text-bg-danger"></div>
<form asp-action="Edit" enctype="multipart/form-data">
	<partial name="PartialViews/_CreateEditPartialView" />
	<input type="submit" value="Save" class="btn btn-primary" /> |
	<a asp-action="Index" asp-controller="Employee" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}